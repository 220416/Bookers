<h1 class="index-h1">Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td class = "title-body"><%= book.title %></td>
        <td class = "title-body"><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id), class: "link" %></td>
        <td><%= link_to "Edit", edit_book_path(book.id), class: "link" %></td>
        <td><%= link_to "Destroy", book_path(book.id), class: "link", method: :delete,  "data-confirm" => "Are you sure?"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2 class ="index-h2">New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>Title</h4>
  <p class="index-p"><%= f.text_field :title %></p>
  <h4>Body</h4>
  <p class="index-p"><%= f.text_area :body %></p>

  <p class="index-p2"><%= f.submit 'Create Book' %></p>
<% end %>