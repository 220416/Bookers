<h1 class = "edit-h1">Editing Books</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
<h4>Title</h4>
<p class="edit-box"><%= f.text_field :title %></p>
<h4>Body</h4>
<p class="edit-box"><%= f.text_area :body %></p>
  
<p class = "edit-update"><%= f.submit 'Update Book' %></p>
<% end %>

<p class = "edit-p"><%= link_to "Show", book_path(@book.id), class: "editshow" %></p>
<p class = "edit-p">|</p>
<p class = "edit-p"><%= link_to "Back", "/books" %></p>